" Appearance
set number
set list
set listchars=tab:\|-,trail:.
" set termguicolors
set background=light
colorscheme 16colors

" Indents
set expandtab
set tabstop=2
set shiftwidth=2
set autoindent
set smartindent

" Windows
set splitright
set splitbelow
" set pumblend=20
" set winblend=20

" Completion
set completeopt=preview,noinsert

" Buffers
set inccommand=split
set clipboard=unnamed
set hidden
